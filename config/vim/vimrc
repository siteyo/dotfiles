" ========================================================================
" .vimrc
" ========================================================================
if &compatible
  set nocompatible
endif

augroup vimrc
  autocmd!
augroup END

let g:vim_data = expand('$XDG_DATA_HOME') . '/vim'
let g:vim_config = expand('$XDG_CONFIG_HOME') . '/vim'

" ------------------------------------------------------------------------
" Basic settings
" ------------------------------------------------------------------------
execute 'source' expand(g:vim_config . '/basic.rc.vim')

" ------------------------------------------------------------------------
" Plugin manager
" ------------------------------------------------------------------------
execute 'source' expand(g:vim_config . '/vim-plug.rc.vim')

" ------------------------------------------------------------------------
" Key mappings
" ------------------------------------------------------------------------
execute 'source' expand(g:vim_config . '/mappings.rc.vim')

" ------------------------------------------------------------------------
" Color settings
" ------------------------------------------------------------------------
execute 'source' expand(g:vim_config . '/color.rc.vim')

" ------------------------------------------------------------------------
" Commands
" ------------------------------------------------------------------------
execute 'source' expand(g:vim_config . '/commands.rc.vim')

" ------------------------------------------------------------------------
" Autocmd
" ------------------------------------------------------------------------
execute 'source' expand(g:vim_config . '/autocmd.rc.vim')

" ------------------------------------------------------------------------
" Load local settings
" ------------------------------------------------------------------------
if filereadable(expand(g:vim_data . '/local_vimrc.vim'))
  execute 'source' expand(g:vim_data . '/local_vimrc.vim')
endif
