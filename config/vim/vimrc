" ========================================================================
" .vimrc
" ========================================================================
if &compatible
  set nocompatible
endif

augroup vimrc
  autocmd!
augroup END

if has('nvim')
  let g:vim_home = expand('~/.nvim')
else
  let g:vim_home = expand('~/.vim')
endif

" ------------------------------------------------------------------------
" Provider configuration
" ------------------------------------------------------------------------
if has('nvim')
  source ~/.config/vim/provider.rc.vim
endif

" ------------------------------------------------------------------------
" Basic settings
" ------------------------------------------------------------------------
source ~/.config/vim/basic.rc.vim

" ------------------------------------------------------------------------
" Plugin manager
" ------------------------------------------------------------------------
source ~/.config/vim/vim-plug.rc.vim

" ------------------------------------------------------------------------
" Key mappings
" ------------------------------------------------------------------------
source ~/.config/vim/mappings.rc.vim

" ------------------------------------------------------------------------
" Color settings
" ------------------------------------------------------------------------
source ~/.config/vim/color.rc.vim

" ------------------------------------------------------------------------
" Commands
" ------------------------------------------------------------------------
source ~/.config/vim/commands.rc.vim

" ------------------------------------------------------------------------
" Autocmd
" ------------------------------------------------------------------------
source ~/.config/vim/autocmd.rc.vim

" ------------------------------------------------------------------------
" Load local settings
" ------------------------------------------------------------------------
if filereadable(expand(g:vim_home . '/local_vimrc.vim'))
  execute 'source' expand(g:vim_home . '/local_vimrc.vim')
endif
