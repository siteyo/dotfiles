{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#1.12.0"
  ],
  "timezone": "Asia/Tokyo",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "after 10pm and before 5am every weekday",
    "every weekend"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "assignees": [
    "siteyo"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "aquaproj/aqua-registry"
      ],
      "extends": [
        "schedule:weekends"
      ]
    }
  ]
}
